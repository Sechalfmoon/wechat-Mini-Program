<view class="selection">
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location
    ></map>
  </view>
  <view class="btn-area">
    <button bindtap="getCenterLocation" class="page-body-button" type="primary">确定你目前位置</button>
    <button bindtap="moveToLocation" class="page-body-button" type="primary">移动到你的位置</button>
   
    <button bindtap="includePoints" class="page" type="primary">缩放视野展示所有经纬度</button>
  </view>
</view>
